{
  "name": "@websummit/components",
  "version": "1.0.0",
  "private": true,
  "description": "Websummit UI components library",
  "license": "MIT",
  "author": "Chris Bowes",
  "main": "src/index",
  "types": "src/index",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "build:standalone": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "fix": "eslint . --config ../../.eslintrc.js  --ignore-path ../../.eslintrelativeignore --ext js,jsx,ts,tsx --cache --cache-location ~/.eslintcache/ --fix",
    "lint": "eslint . --config ../../.eslintrc.js  --ignore-path ../../.eslintrelativeignore --ext js,jsx,ts,tsx --cache --cache-location ~/.eslintcache/ ",
    "compile": "tsc -p tsconfig.build.json --noEmit",
    "prepublishOnly": "yarn run build",
    "test": "yarn run build"
  },
  "dependencies": {
    "@websummit/tsutils": "*",
    "formik": "*",
    "luxon": "*",
    "nanoid": "*",
    "react": "*",
    "react-csv": "*",
    "react-currency-input-field": "*",
    "react-datepicker": "*",
    "react-dom": "*",
    "react-json-pretty": "*",
    "react-modal": "*",
    "react-router-dom": "*",
    "react-simple-snackbar": "*",
    "styled-components": "*"
  },
  "devDependencies": {
    "@types/react-csv": "*"
  }
}
