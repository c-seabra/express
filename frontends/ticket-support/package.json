{
  "name": "@websummit-micro/ticket-support",
  "version": "1.0.0",
  "scripts": {
    "start": "webpack serve --port 9002",
    "start:standalone": "webpack serve --env standalone",
    "build": "webpack --mode=production  --config ./webpack.config.build.js",
    "build-standalone": "webpack --mode=production --config ./webpack.config.build.js",
    "analyze": "webpack --mode=production --config ./webpack.config.build.js --env analyze",
    "lint": "eslint src --ext js,ts,tsx",
    "format": "prettier --write \"./**\"",
    "test": "cross-env BABEL_ENV=test jest",
    "watch-tests": "cross-env BABEL_ENV=test jest --watch",
    "coverage": "cross-env BABEL_ENV=test jest --coverage",
    "clean": "rimraf -rf ./dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && concurrently yarn:test yarn:lint"
    }
  },
  "dependencies": {
    "@apollo/client": "*",
    "@apollo/react-common": "*",
    "formik": "*",
    "isomorphic-unfetch": "*",
    "jwt-decode": "*",
    "luxon": "*",
    "react": "*",
    "react-dom": "*",
    "react-helmet": "*",
    "react-modal": "*",
    "react-router-dom": "*",
    "react-simple-snackbar": "*",
    "styled-components": "*",
    "yup": "*"
  },
  "devDependencies": {},
  "config": {
    "eslint": {
      "extensions": ".json,.js,.jsx,.ts,.tsx",
      "paths": ". src/** test/**"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
